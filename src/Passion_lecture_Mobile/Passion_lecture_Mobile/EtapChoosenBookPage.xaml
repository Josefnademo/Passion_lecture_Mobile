<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Passion_lecture_Mobile.EtapChoosenBookPage"
             Title="EtapChoosenBookPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="ReadBook"
            Text="Lire ce livre" 
            SemanticProperties.Hint="BookTextDisplay"
            Clicked="ReadThisBook"
            HorizontalOptions="Fill" />
            
        <Button
            x:Name="ModifyBook"
            Text="Modiffier ce livre" 
            SemanticProperties.Hint="library with all added books"
            Clicked="ModifyThisBook"
            HorizontalOptions="Fill" />

        <Button 
         Text="Back"
         Clicked="GoBack"
         HorizontalOptions="Center"/>
        
    </VerticalStackLayout>
</ContentPage>