<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Passion_lecture_Mobile.ImportPage"
             Title="ImportPage">


    <ScrollView>
        <VerticalStackLayout Spacing="40" Padding="20">

            <!-- Heading -->
            <Label Text="Importation"
                   Style="{StaticResource PageTitle}"
                   HorizontalOptions="Center" />

                <!-- Main content -->
                <Frame Style="{StaticResource UploadFrame}">
                <VerticalStackLayout Spacing="20" 
                                   HorizontalOptions="Center" 
                                   VerticalOptions="Center">

                    <!-- Import button -->
                    <Button Text="Importer un livre"
                            Clicked="ImportBook"
                            Style="{StaticResource PrimaryButton}"
                            WidthRequest="250"
                            HorizontalOptions="Center"/>

                    <!-- Format hint -->
                    <Label Text="Formats supportÃ©s: .epub, .pdf"
                           Style="{StaticResource HintLabel}"
                           HorizontalOptions="Center" />

                    <Button Text="Back"
            Clicked="GoBack"
            HorizontalOptions="Center"/>
                    </VerticalStackLayout>
            </Frame>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>