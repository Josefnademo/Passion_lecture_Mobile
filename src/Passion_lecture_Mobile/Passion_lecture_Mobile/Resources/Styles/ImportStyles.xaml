<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Frame style for loading area -->
    <Style x:Key="UploadFrame" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource White}"/>
        <Setter Property="BorderColor" Value="{StaticResource Gray300}"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Padding" Value="40"/>
        <Setter Property="HasShadow" Value="True"/>
        <Setter Property="Shadow" Value="{StaticResource ShadowMedium}"/>
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
    </Style>

    <!-- Tooltip style -->
    <Style x:Key="HintLabel" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="{StaticResource Gray500}"/>
        <Setter Property="FontAttributes" Value="Italic"/>
    </Style>

</ResourceDictionary>