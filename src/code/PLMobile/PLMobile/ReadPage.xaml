<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PLMobile.ViewModels"
             x:Class="PLMobile.ReadPage"
             x:DataType="viewmodels:ReadPageViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="*, Auto">
        <!-- Main Content -->
        <ScrollView Grid.Row="0" Margin="20,10">
            <VerticalStackLayout Spacing="20">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                 IsVisible="{Binding IsBusy}"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"/>

                <Label Text="{Binding PageContent}"
                       FontSize="16"
                       TextColor="Black"
                       LineHeight="1.5"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill"
                       IsVisible="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Navigation Controls -->
        <Grid Grid.Row="1" 
              ColumnDefinitions="Auto,*,Auto"
              RowDefinitions="Auto,Auto"
              Padding="20"
              BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}">

            <!-- Previous Page Button -->
            <Button Grid.Row="0" Grid.Column="0"
                    Text="←"
                    FontSize="24"
                    Command="{Binding PreviousPageCommand}"
                    IsEnabled="{Binding CanGoPrevious}"
                    WidthRequest="50"
                    HeightRequest="50"
                    Padding="0"
                    Margin="0,0,10,0"/>

            <!-- Page Progress -->
            <VerticalStackLayout Grid.Row="0" Grid.Column="1"
                               HorizontalOptions="Center"
                               Spacing="5">
                <Label Text="{Binding CurrentPage, StringFormat='Page {0}'}"
                       HorizontalOptions="Center"
                       FontSize="16"/>
                <ProgressBar Progress="{Binding ReadingProgress}"
                            WidthRequest="200"
                            HeightRequest="6"/>
                <Label Text="{Binding ProgressText}"
                       HorizontalOptions="Center"
                       FontSize="12"
                       TextColor="Gray"/>
            </VerticalStackLayout>

            <!-- Next Page Button -->
            <Button Grid.Row="0" Grid.Column="2"
                    Text="→"
                    FontSize="24"
                    Command="{Binding NextPageCommand}"
                    IsEnabled="{Binding CanGoNext}"
                    WidthRequest="50"
                    HeightRequest="50"
                    Padding="0"
                    Margin="10,0,0,0"/>

            <!-- Return Button -->
            <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                    Text="Retour"
                Command="{Binding GoBackCommand}"
                Style="{StaticResource SecondaryButton}"
                    Margin="0,10,0,0"/>

        </Grid>
    </Grid>

</ContentPage>
