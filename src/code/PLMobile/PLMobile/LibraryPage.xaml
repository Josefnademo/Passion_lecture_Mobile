<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PLMobile.ViewModels"
             xmlns:models="clr-namespace:PLMobile.Models"
             x:Class="PLMobile.LibraryPage"
             x:DataType="viewmodels:LibraryPageViewModel"
             Title="{Binding Title}"
             BackgroundImageSource="background_library.png">

    <Grid RowDefinitions="Auto,Auto,*"
          Padding="20">
        
        <!-- Filter Controls -->
        <Grid Grid.Row="0" 
              ColumnDefinitions="*,*"
              ColumnSpacing="10"
              Margin="0,0,0,20">
            
            <!-- Tag Filter -->
            <Button Grid.Column="0"
                    Text="Filtrer par tag"
                    Command="{Binding ShowTagFilterCommand}"
                    Style="{StaticResource SecondaryButton}"/>
            
            <!-- Year Filter -->
            <Button Grid.Column="1"
                    Text="Trier par date"
                    Command="{Binding ShowYearFilterCommand}"
                    Style="{StaticResource SecondaryButton}"/>
        </Grid>

        <!-- Active Filters Display -->
        <StackLayout Grid.Row="1" 
                     Orientation="Horizontal"
                     Spacing="10"
                     Margin="0,0,0,10">
            <Label Text="{Binding ActiveTagFilter, StringFormat='Tag: {0}'}"
                   IsVisible="{Binding HasActiveTagFilter}"/>
            <Label Text="{Binding ActiveYearFilter, StringFormat='Année: {0}'}"
                   IsVisible="{Binding HasActiveYearFilter}"/>
            <Button Text="Effacer les filtres"
                    Command="{Binding ClearFiltersCommand}"
                    IsVisible="{Binding HasAnyFilter}"
                    Style="{StaticResource DangerButton}"/>
        </StackLayout>

        <RefreshView Grid.Row="2"
                     Command="{Binding LoadBooksCommand}"
                     IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding Books}"
                        SelectionMode="Single"
                        SelectionChangedCommand="{Binding OpenBookCommand}"
                        SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center">
                        <Label Text="Aucun livre trouvé"
                             TextColor="White"
                             FontSize="18"
                             HorizontalOptions="Center"/>
                        <Label Text="Importez un livre pour commencer"
                             TextColor="LightGray"
                             FontSize="14"
                             HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:BookModel">
                        <Frame Margin="0,5"
                             BackgroundColor="#80000000"
                             BorderColor="Transparent"
                             CornerRadius="10"
                             HasShadow="True">
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout Grid.Column="0"
                                                 Spacing="5">
                                    <Label Text="{Binding Title}"
                                         TextColor="White"
                                         FontSize="18"
                                         FontAttributes="Bold"/>
                                    <Label Text="{Binding CreatedAt, StringFormat='{0:dd/MM/yyyy}'}"
                                         TextColor="LightGray"
                                         FontSize="14"/>
                                    <Label Text="{Binding LastReadPage, StringFormat='Page: {0}'}"
                                         TextColor="LightGray"
                                         FontSize="14"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <ActivityIndicator Grid.RowSpan="3"
                          IsVisible="{Binding IsBusy}"
                          IsRunning="{Binding IsBusy}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>
    </Grid>

</ContentPage>