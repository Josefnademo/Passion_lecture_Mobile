<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLMobile.LibraryPage"
             Title="Ma Bibliothèque">
    <RefreshView>
        <CollectionView x:Name="booksCollection"
                       SelectionMode="Single"
                       SelectionChanged="OnBookSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Frame Style="{StaticResource BookCard}">
                            <StackLayout Orientation="Horizontal" Spacing="15">
                                <Image Source="book_placeholder.png"
                                       WidthRequest="60"
                                       HeightRequest="80"/>
                                <StackLayout VerticalOptions="Center">
                                    <Label Text="{Binding Title}"
                                           Style="{StaticResource BookTitle}"/>
                                    <Label Text="{Binding CreatedAt, StringFormat='Ajouté le {0:dd.MM.yyyy}'}"
                                           Style="{StaticResource BookDate}"/>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>