<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PLMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PLMobile"
    Shell.FlyoutBehavior="Disabled"
    Title="PLMobile">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="API Test"
        ContentTemplate="{DataTemplate local:ApiPage}"
        Route="ApiPage" />

    <ShellContent
        ContentTemplate="{DataTemplate local:LibraryPage}"
        Route="LibraryPage" />

    <ShellContent
        ContentTemplate="{DataTemplate local:ImportPage}"
        Route="ImportPage" />

    <ShellContent
        ContentTemplate="{DataTemplate local:TagsPage}"
        Route="TagsPage" />

    <ShellContent
        ContentTemplate="{DataTemplate local:ReadPage}"
        Route="ReadPage" />

</Shell>
