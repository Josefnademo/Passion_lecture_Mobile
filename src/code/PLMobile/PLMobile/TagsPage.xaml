<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLMobile.TagsPage"
             Title="Tags">

    <VerticalStackLayout Padding="30" Spacing="20">

        <Label Text="Tags"
               FontSize="24"
               HorizontalOptions="Center"
               FontAttributes="Bold" />

        <!-- Affichage dynamique des tags -->
        <CollectionView x:Name="TagsList"
                        ItemsSource="{Binding Tags}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="0,5">
                        <HorizontalStackLayout>
                            <Label Text="{Binding Name}"
                                   VerticalOptions="Center"
                                   FontSize="16" />
                            <ImageButton Source="delete_icon.png"
                                         HeightRequest="24"
                                         HorizontalOptions="EndAndExpand"
                                         Clicked="DeleteTag"
                                         CommandParameter="{Binding Id}" />
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Saisie -->
        <Entry x:Name="TagEntry"
               Placeholder="Entrez le nom du tag"
               FontSize="16" />

        <Button Text="CrÃ©er un tag"
                Clicked="CreateTag"
                HorizontalOptions="Center"
                BackgroundColor="LightGreen"
                TextColor="Black" />

        <Button Text="Retour"
                Clicked="GoBack"
                HorizontalOptions="Center"
                BackgroundColor="LightGray"
                TextColor="Black" />
    </VerticalStackLayout>
</ContentPage>
