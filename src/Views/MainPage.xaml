<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PassionLecture.Views.MainPage"
             Title="Passion Lecture">

    <Grid RowDefinitions="*,Auto,Auto,Auto"
          Padding="20"
          BackgroundImageSource="background_nature.jpg">

        <VerticalStackLayout Grid.Row="0"
                            VerticalOptions="Center">
            <Label Text="Bienvenue à la"
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontSize="24"/>
            <Label Text="librairie des"
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontSize="24"/>
            <Label Text="amoureux des"
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontSize="24"/>
            <Label Text="livres"
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontSize="24"/>
        </VerticalStackLayout>

        <Button Grid.Row="1"
                Text="Ma bibliothèque"
                Command="{Binding OpenLibraryCommand}"
                Margin="0,10"
                BackgroundColor="#4CAF50"
                TextColor="White"/>

        <Button Grid.Row="2"
                Text="Importer un livre"
                Command="{Binding ImportBookCommand}"
                Margin="0,10"
                BackgroundColor="#2196F3"
                TextColor="White"/>

        <Button Grid.Row="3"
                Text="Tags"
                Command="{Binding OpenTagsCommand}"
                Margin="0,10"
                BackgroundColor="#9C27B0"
                TextColor="White"/>
    </Grid>

</ContentPage> 